{
  "extends": "airbnb",
  "plugins": [
      "react",
      "jest",
      "class-property"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "rules": {
    "semi": 0,
    "comma-dangle": 0,
    "react/prefer-stateless-function": 0,
    "class-methods-use-this": 0,
    "no-plusplus": 0,
    "node":    true,
    "no-use-before-define": 0
  },
  "env": {
    "browser": true,
    "jest": true,
    "es6":     true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}